{
    "manifestVersion": 1,
    "id": "cascading-select-control",
    "version": "1.2.1",
    "name": "Cascading Select Control",
    "publisher": "allan-walker",
    "description": "Adds a custom control that allows you to configure up to four levels of cascading select fields.",
    "targets": [{
        "id": "Microsoft.VisualStudio.Services",
        "version": "[15.0,)"
    }],
    "icons": {
        "default": "img/logo.png"
    },
    "scopes": [
        "vso.code_full",
        "vso.work",
        "vso.work_write",
        "vso.identity",
        "vso.graph",
        "vso.project",
        "vso.security_manage"
    ],
    "tags": [
        "Work Item",
        "Work Item control",
        "Usability",
        "Picker",
        "Multi Pickers",
        "Multi List Values",
        "Storage",
        "List",
        "Cascading"
    ],
    "content": {
        "details": {
            "path": "details.md"
        },
        "license": {
            "path": "LICENSE.md"
        },
        "privacy": {
            "path": "PRIVACY.md"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/awalkergh/PickerFieldsControl"
    },
    "links": {
        "support": {
            "uri": "https://github.com/awalkergh/PickerFieldsControl/issues"
        },
        "license": {
            "uri": "https://github.com/awalkergh/PickerFieldsControl/blob/master/LICENSE.md"
        },
        "privacypolicy": {
            "uri": "https://github.com/awalkergh/PickerFieldsControl/blob/master/PRIVACY.md"
        },
        "learn": {
            "uri": "https://github.com/awalkergh/PickerFieldsControl/blob/master/README.md"
        },
        "repository": {
            "uri": "https://github.com/awalkergh/PickerFieldsControl"
        },
        "issues": {
            "uri": "https://github.com/awalkergh/PickerFieldsControl/issues"
        }
    },
    "files": [{
            "path": "img",
            "addressable": true
        },
        {
            "path": "scripts",
            "addressable": true
        },
        {
            "path": "styles",
            "addressable": true
        },
        {
            "path": "configCsvHub.html",
            "addressable": true
        },
        {
            "path": "index.html",
            "addressable": true
        },
        {
            "path": "action.html",
            "addressable": true
        }
    ],
    "categories": [
        "Azure Boards"
    ],
    "contributions": [{
            "id": "cascading-select-contributions",
            "description": "Add cascading selects to your form.",
            "type": "ms.vss-work-web.work-item-form-control",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Cascading Select Control",
                "uri": "index.html",
                "inputs": [{
                        "id": "ControlName",
                        "name": "Datasource name",
                        "description": "The name of the datasource to use for these cascading selects.",
                        "type": "TextArea",
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id": "FieldName1",
                        "name": "Level 1 field label",
                        "description": "The label to give the level 1 select.",
                        "type": "TextArea",
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id": "Field1",
                        "name": "Level 1 field name",
                        "description": "The work item field to bind to the level 1 select.",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": [
                                "Integer",
                                "Double",
                                "String"
                            ]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    }, {
                        "id": "Field1Hide",
                        "name": "Hide level 1 select",
                        "description": "Hide the level 1 select?",
                        "inputMode": "CheckBox",
                        "validation": {
                            "dataType": "Boolean"
                        }
                    },
                    {
                        "id": "FieldName2",
                        "name": "Level 2 field label",
                        "description": "The label to gie the level 2 select.",
                        "type": "TextArea",
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id": "Field2",
                        "name": "Level 2 field name",
                        "description": "The work item field to bind to the level 2 select.",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": [
                                "Integer",
                                "Double",
                                "String"
                            ]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    }, {
                        "id": "Field2Hide",
                        "name": "Hide level 2 select",
                        "description": "Hide the level 2 select?",
                        "inputMode": "CheckBox",
                        "validation": {
                            "dataType": "Boolean"
                        }
                    },
                    {
                        "id": "FieldName3",
                        "name": "Level 3 field label",
                        "description": "The label to gie the level 3 select.",
                        "type": "TextArea",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    },
                    {
                        "id": "Field3",
                        "name": "Level 3 field name",
                        "description": "The work item field to bind to the level 3 select.",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": [
                                "Integer",
                                "Double",
                                "String"
                            ]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    }, {
                        "id": "Field3Hide",
                        "name": "Hide level 3 select",
                        "description": "Hide the level 3 select?",
                        "inputMode": "CheckBox",
                        "validation": {
                            "dataType": "Boolean"
                        }
                    },
                    {
                        "id": "FieldName4",
                        "name": "Level 4 field label",
                        "description": "The label to gie the level 4 select.",
                        "type": "TextArea",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    },
                    {
                        "id": "Field4",
                        "name": "Level 4 field name",
                        "description": "Hide the level 4 select?",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": [
                                "Integer",
                                "Double",
                                "String"
                            ]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    }, {
                        "id": "Field4Hide",
                        "name": "Hide level 4 select",
                        "description": "Hide on and off the fourth select hide",
                        "inputMode": "CheckBox",
                        "validation": {
                            "dataType": "Boolean"
                        }
                    },
                    {
                        "id": "ViewOption",
                        "name": "Show number of inline selects",
                        "description": "How many selects to show on a single line before wrapping? (default: 4)",
                        "type": "TextArea",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    },
                    {
                        "id": "SummarizeToPath",
                        "name": "Cascaded values summary",
                        "description": "Optionally select a field to display a concatenated path-like value of the selected cascaded values.",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": [
                                "Integer",
                                "Double",
                                "String"
                            ]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    },
                    {
                        "id": "Reposetory",
                        "name": "Backup Repository",
                        "description": "This field get the project name and the repository name, use only for push the csv content to version control as backup",
                        "type": "TextArea",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    }, 
                    {
                        "id": "PrivateBehaviure",
                        "name": "Private Behaviore",
                        "description": "This field get string of special behavior",
                        "type": "TextArea",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    }
                ]
            }
        },
        {
            "id": "myAction",
            "description": "Upload and verify a CSV datasource.",
            "type": "ms.vss-web.action",
            "targets": [
                "ms.vss-work-web.work-item-context-menu"
            ],
            "properties": {
                "text": "Upload CSV datasource",
                "title": "Upload CSV datasource file",
                "icon": "img/icon.png",
                "groupId": "cascading-select",
                "uri": "action.html"
            }
        },
        {
            "id": "configure-cascading-select-hub",
            "type": "ms.vss-web.hub",
            "description": "Adds a 'Cascading Select' hub to the work Item configuration hub group.",
            "targets": [
                "ms.vss-web.collection-admin-hub-group"
            ],
            "properties": {
                "name": "Cascading Select",
                "uri": "configCsvHub.html",
                "order": 99
            }
        }
    ]
}